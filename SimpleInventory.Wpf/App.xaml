<Application x:Class="SimpleInventory.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dialogs="clr-namespace:SimpleInventory.Wpf.Dialogs"
             xmlns:views="clr-namespace:SimpleInventory.Wpf.Views"
             xmlns:vm="clr-namespace:SimpleInventory.Wpf.ViewModels"
             xmlns:local="clr-namespace:SimpleInventory.Wpf">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type vm:ItemDetailsViewModel}">
                <views:ItemDetailsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type dialogs:YesNoDialogViewModel}">
                <dialogs:YesNoDialogView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CustomerDetailsViewModel}">
                <views:CustomerDetailsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
