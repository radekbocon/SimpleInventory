<UserControl x:Class="SimpleInventory.Wpf.Controls.RowShimmer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleInventory.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Rectangle Fill="{DynamicResource Brush.Border.Background.3}" Height="23" Margin="1 0 1 0" />
            <Rectangle Fill="{DynamicResource Brush.Border.Background.2}" Height="23" Margin="1 0 1 0"/>
            <Rectangle Fill="{DynamicResource Brush.Border.Background.3}" Height="23" Margin="1 0 1 0"/>
            <Rectangle Fill="{DynamicResource Brush.Border.Background.2}" Height="23" Margin="1 0 1 0"/>
            <Rectangle Fill="{DynamicResource Brush.Border.Background.3}" Height="23" Margin="1 0 1 0"/>
            <Rectangle Fill="{DynamicResource Brush.Border.Background.2}" Height="23" Margin="1 0 1 0"/>
            <Rectangle Fill="{DynamicResource Brush.Border.Background.3}" Height="23" Margin="1 0 1 0"/>
            <Rectangle Fill="{DynamicResource Brush.Border.Background.2}" Height="23" Margin="1 0 1 0"/>
        </StackPanel>
    </Grid>
</UserControl>
